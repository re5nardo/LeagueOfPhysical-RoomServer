generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoomStatus {
  None
  CreatingRunner
  RunnerCreated
  Initializing
  WaitingForPlayers
  StartingGame
  GameInProgress
  GameFinished
  Closing
  Closed
  Error
}

model Room {
  id            String      @id @unique
  matchId       String      @unique
  createdAt     Int
  status        Int
  ip            String
  port          Int
  lastHeartbeat Int
}